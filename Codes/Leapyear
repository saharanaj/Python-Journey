def is_leap_year(year):
    # Check if divisible by 4
    if year % 4 == 0:
        #Now check if its also divisble by 100
        if year % 100 == 0 :
            #if divisible by 100, it must also be divisible by 400
            if year % 400 == 0 :
                return True
            else: 
                return False
        else:
            #Divisible by 4 but not 100
            return True
    else:
        #Not Divisibleby 4 at all 
        return False
#Example usage:
print (is_leap_year(2000))
print(is_leap_year(2100))
